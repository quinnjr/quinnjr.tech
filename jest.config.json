{
  "moduleNameMapper": {
    "@core/(.*)": "<rootDir>/src/app/core/$1"
  },
  "preset": "jest-preset-angular",
  "testMatch": [
    "**/+(*.)+(spec).+(ts)"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "jest-preset-angular"
  },
  "setupFilesAfterEnv": [ "<rootDir>/jest.setup.ts" ],
  "collectCoverage": true,
  "coverageDirectory": "./dist/coverage",
  "testEnvironment": "jsdom"
}
